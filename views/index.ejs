<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>scatch</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
  </head>
  <body>
    <header>
      <p class="logo">Scatch</p>
    </header>
    <main>
      <div class="mainContainer">
        <div class="createAccount">
          <div class="headingOfCreateAccount">
            <p class="welcomeText">
              Welcome to <span class="logoName">Scatch</span>
            </p>
            <p class="createAcc">Create your account</p>
          </div>
          <div class="formSec">
            <form action="/users/register" method="post">
              <input
                class="inputFullname"
                type="text"
                placeholder="Enter Your Fullname"
                name="fullname"
              />
              <input
                class="inputEmail"
                type="email"
                placeholder="Enter Your Email"
                name="email"
              />
              <input
                class="inputPassword"
                type="password"
                placeholder="Enter Your Password"
                name="password"
              />
              <input
                class="createbtn"
                type="submit"
                value="Create My Account"
              />
            </form>
          </div>
        </div>
        <div class="orSec">
          <p>Or</p>
        </div>
        <div class="loginAccount">
          <div class="headingOfLoginAccount">
            <p class="loginAccText">Login your account</p>
          </div>
          <div class="loginformSec">
            <form action="/users/login" method="post">
              <input
                class="inputEmail"
                type="email"
                placeholder="Enter your Email"
                name="email"
              />
              <input
                class="inputPassword"
                type="password"
                placeholder="enter your Password"
                name="password"
              />
              <input class="loginBtn" type="submit" value="Login" />
            </form>
            <p class="ownerLink">
              Are you an owner <a href="/owners/login">Click here?</a>
            </p>
          </div>
        </div>
      </div>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>
