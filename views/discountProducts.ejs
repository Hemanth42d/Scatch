<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop</title>
    <link rel="stylesheet" href="/stylesheets/shop.css" />
    <script
      src="https://kit.fontawesome.com/6bf2bfea80.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include("partials/header") %>

    <main>
      <div class="LeftNavSec">
        <div class="leftNavTopSec">
          <div class="leftNavTopSecSecondOne">
            <a href="/shop">All Products</a>
            <a href="/users/discount/product">Discounted Products</a>
          </div>
        </div>
        <div class="leftNavBottomSec">
          <p>Fliter By :</p>
          <div class="letfNavBottomSecDownLinks">
            <a href="/shop">Avaliability</a>
            <a href="/users/discount/product">Discount</a>
          </div>
        </div>
      </div>
      <div class="productsSec">
        <% products.forEach((product) => { %> <% if(product.discount > 0) { %>
        <div class="product">
          <div class="productImage">
            <img
              src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
              alt=""
            />
          </div>
          <div class="productDetails">
            <div class="productNAme">
              <p><%= product.name %></p>
              <p>₹<%= product.discount %></p>
            </div>
            <div class="productPriceDetails">
              <div class="productPrice">₹<%= product.price %></div>
              <div class="addTocartIcon">
                <a href="/addToCart/<%= product._id%>"
                  ><i class="fa-solid fa-cart-shopping"></i
                ></a>
              </div>
            </div>
          </div>
        </div>
        <% } else { %>
        <p class="noDiscountProducts">No Discounted Products</p>
        <% } %> <% }) %>
      </div>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>
